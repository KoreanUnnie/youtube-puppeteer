    {
      "name": "Puppeteer Server",
      "script": "index.js",
      "instances": 1,
      "exec_mode": "fork",
      "watch": true,
      "ignore_watch": [
        "data",
        "node_modules",
        ".git",
        "*.png",
        "hooks.js",
        "scripts"
      ],
      "watch_options": {
        "followSymlinks": false
      }
    }
  ]
}
